{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"],
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "types": ["bun-types"],

    // emit-type / Bundler mode
    "target": "ESNext" /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */,
    "module": "ESNext" /* ESNext using import, commonjs using require. */,
    "declaration": true /* Generate type declarations. */,
    "declarationDir": "./dist/types",
    "outDir": "./dist/js" /* Output Directory. */,
    "strict": true /* Enable strict mode. */,
    "esModuleInterop": true /* Support for ES modules. */,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "forceConsistentCasingInFileNames": true /* Enforce consistent file names. */,

    // Best practices
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
